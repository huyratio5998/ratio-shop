@model IEnumerable<RatioShop.Data.Models.ProductVariantStock>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Stock)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductVariant)
            </th>
            <th>
                Product
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductNumber)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Stock.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductVariant.Code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductVariant.Product.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductNumber)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { stockId=item.StockId, productVariantId= item.ProductVariantId }) |
                @Html.ActionLink("Details", "Details", new {  stockId=item.StockId, productVariantId= item.ProductVariantId}) |
                @Html.ActionLink("Delete", "Delete", new {  stockId=item.StockId, productVariantId= item.ProductVariantId})
            </td>
        </tr>
}
    </tbody>
</table>
