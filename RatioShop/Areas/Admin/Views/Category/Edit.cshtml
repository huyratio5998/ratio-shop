@model RatioShop.Data.ViewModels.CategoryViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}

<h1>Edit</h1>

<h4>Category</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Category.Name" class="control-label"></label>
                <input asp-for="Category.Name" class="form-control" />
                <span asp-validation-for="Category.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Category.DisplayName" class="control-label"></label>
                <input asp-for="Category.DisplayName" class="form-control" />
                <span asp-validation-for="Category.DisplayName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Category.ParentCategory.Name" class="control-label"></label>
                <select asp-for="Category.ParentId" id="Category_ParentId" class="form-control">
                    <option value="">Set as Catalog</option>
                    @if (Model.AvailableCategory != null && Model.AvailableCategory.Any())
                    {
                        foreach (var item in Model.AvailableCategory)
                        {
                            <option value="@item.Key">@item.Value</option>
                        }
                    }
                </select>
                <span asp-validation-for="Category.ParentId" class="text-danger"></span>
            </div>

            <input type="hidden" asp-for="Category.Id" />
            <input type="hidden" asp-for="Category.CreatedDate" />
            <input type="hidden" asp-for="Category.ModifiedDate" />

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
