@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}

<h1>Welcome to dashboard admin</h1>

<div class="d-flex align-items-start">
    <div class="nav flex-column nav-pills me-3" id="v-pills-tab" role="tablist" aria-orientation="vertical">
        <button class="nav-link active" id="v-pills-home-tab" data-bs-toggle="pill" data-bs-target="#v-pills-order" type="button" role="tab" aria-controls="v-pills-home" aria-selected="true">Order Viewer</button>
        <button class="nav-link" id="v-pills-profile-tab" data-bs-toggle="pill" data-bs-target="#v-pills-shipment" type="button" role="tab" aria-controls="v-pills-profile" aria-selected="false">Shipments</button>
        <button class="nav-link" id="v-pills-messages-tab" data-bs-toggle="pill" data-bs-target="#v-pills-users" type="button" role="tab" aria-controls="v-pills-messages" aria-selected="false">Users</button>
        <button class="nav-link" id="v-pills-messages-tab" data-bs-toggle="pill" data-bs-target="#v-pills-others" type="button" role="tab" aria-controls="v-pills-messages" aria-selected="false">Others</button>

    </div>
    <div class="tab-content" id="v-pills-tabContent">
        <div class="tab-pane fade show active" id="v-pills-order" role="tabpanel" aria-labelledby="v-pills-home-tab">
            <ul>
                <li>
                    <a asp-controller="Orders" asp-action="Index">Order Viewer</a>
                </li>
            </ul>
        </div>
        <div class="tab-pane fade" id="v-pills-shipment" role="tabpanel" aria-labelledby="v-pills-shipment-tab">
            <ul>
                <li>
                    <a asp-controller="Shipments" asp-action="MyShipment">My Shipments</a>
                </li>
                <li>
                    <a asp-controller="Shipments" asp-action="MyFinishedShipment">My Finished Shipments</a>
                </li>
            </ul>
        </div>
        <div class="tab-pane fade" id="v-pills-users" role="tabpanel" aria-labelledby="v-pills-messages-tab">
            <ul>
                <li>
                    <a asp-controller="UserManagements" asp-action="Index">User Management</a>
                </li>
                <li>
                    <a asp-controller="UserManagements" asp-action="Employees">Employees Management</a>
                </li>
            </ul>
        </div>
        <div class="tab-pane fade" id="v-pills-others" role="tabpanel" aria-labelledby="v-pills-messages-tab">
            <ul>
                <li>
                    <a asp-area="" asp-controller="Category" asp-action="Index">Category</a>
                </li>
                <li>
                    <a asp-area="" asp-controller="Addresses" asp-action="Index">Address</a>
                </li>
                <li>
                    <a asp-area="" asp-controller="Discounts" asp-action="Index">Discount</a>
                </li>                
            </ul>
        </div>
    </div>
</div>