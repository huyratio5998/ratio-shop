@using RatioShop.Constants;
@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
    var message = ViewBag.Message;
}

<h1>Cache Management</h1>

<div>
    <form asp-action="ClearCache" id="clearCacheForm">
        <div>
            <label>
                Purge by Key:
                <input type="text" name="cache-setting" class="form-control" />
            </label>
        </div>
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>
                            Cache location
                        </th>

                    </tr>
                </thead>
                <tbody>
                    <tr class="js_choose-item">
                        <td>
                            <input type="checkbox" id="site-setting" name="cache-setting" value="@CacheConstant.SiteSettingKey" />
                            <span>
                                Site Setting Common
                            </span>
                        </td>
                    </tr>
                    <tr class="js_choose-item">
                        <td>
                            <input type="checkbox" id="plp-setting" name="cache-setting" value="@CacheConstant.PLPKey" />
                            <span>
                                PLP Setting
                            </span>
                        </td>
                    </tr>
                    <tr class="js_choose-item">
                        <td>
                            <input type="checkbox" id="pdp-setting" name="cache-setting" value="@CacheConstant.PDPKey" />
                            <span>
                                PDP Setting
                            </span>
                        </td>
                    </tr>
                    <tr class="js_choose-item">
                        <td>
                            <input type="checkbox" id="admin-site-setting" name="cache-setting" value="@CacheConstant.AdminSiteSettingKey" />
                            <span>
                                Admin Site Setting Common
                            </span>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
        <input type="submit" value="Purge cache" class="btn btn-primary" />
    </form>
</div>

<script defer src="@Url.Content("~/js/administrator/cacheManager/cache-manager.js")"></script>